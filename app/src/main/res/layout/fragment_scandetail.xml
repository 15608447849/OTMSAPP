<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recycle_item_bg_color2"
        android:orientation="vertical">
         <!--门店名 数量-->
         <TextView
                android:id="@+id/fragment_scandetail_tv_storeName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycle_itemView_title_h"
                android:gravity="center"
                style="@style/recycle_itemview_titleTextView"
                android:text="xxxxxxxxxxx门店 [0/15]"

                />
         <!--详细地址-->
         <TextView
            android:id="@+id/fragment_scandetail_tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/recycle_item_content_h"
            android:gravity="center"
            style="@style/recycle_itemview_titleTextView"
            android:text="湖南省长沙市雨花区湖南科技职业学院256号................"
            />
    <include layout="@layout/include_layout_recycle"/>
    </LinearLayout>




